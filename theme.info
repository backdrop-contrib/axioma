type = theme
name = Foo Theme
description = A description of this theme.
backdrop = 1.x

; Add additional CSS files, or replace core CSS files.
stylesheets[all][] = css/base.css
stylesheets[all][] = css/header.css
stylesheets[all][] = css/footer.css
stylesheets[all][] = css/menu-dropdown.css
stylesheets[all][] = css/menu-toggle.css
stylesheets[all][] = css/skin.css

; Add theme CSS files for print.
stylesheets[print][] = css/print.css

; Include CSS files in the rich-text editor.
ckeditor_stylesheets[] = css/base.css

; Remove unwanted core CSS files.
stylesheets[all][] = menu-dropdown.theme.css

; Add additional JavaScript files.
scripts[] = js/script.js

; Indicate that this theme has color support.
; We need at least one setting for the theme settings page to appear in the
; menu. Color module provides defaults, so we register a dummy setting here.
settings[color] = true

